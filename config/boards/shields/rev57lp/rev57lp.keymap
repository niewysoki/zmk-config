        };

        combo_rpar {
            timeout-ms = <50>;
            key-positions = <19 32>;
            bindings = <&kp RPAR>;
        };

        combo_rbkt {
            timeout-ms = <50>;
            key-positions = <20 33>;
            bindings = <&kp RBKT>;
        };

        combo_rbrc {
            timeout-ms = <50>;
            key-positions = <18 31>;
            bindings = <&kp RBRC>;
        };
