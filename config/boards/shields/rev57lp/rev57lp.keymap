    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
                &kp MINUS   &kp N1      &kp N2      &kp N3      &kp N4      &kp N5                              &kp N6      &kp N7      &kp N8      &kp N9     &kp N0      &kp EQUAL    
                &kp GRAVE   &kp Q       &kp W       &kp F       &kp P       &kp B                               &kp J       &kp L       &kp U       &kp Y      &kp SEMI    &kp BSLH 
                &none       &hm_a       &hm_r       &hm_s       &hm_t       &kp G             &tdcaps           &kp M       &hm_n       &hm_e       &hm_i      &hm_o       &none    
                &kp RALT    &kp Z       &kp X       &kp C       &kp D       &kp V                               &kp K       &kp H       &kp COMMA   &kp DOT    &kp SLASH   &kp RALT
                                                    &none       &kp ESC     &kp SPACE   &kp TAB     &kp ENTER   &kp BSPC    &kp DELETE  &none
                >;
        };

        media {
            bindings = <
                &none       &none       &none       &none      &none       &none                                &none       &none       &none       &none      &none       &none    
                &none       &none       &none       &none      &none       &none                                &none       &none       &none       &none      &none       &none    
                &none       &none       &none       &none      &none       &none              &none             &none       &none       &none       &none      &none       &none    
                &none       &none       &none       &none      &none       &none                                &none       &none       &none       &none      &none       &none
                                                    &none      &none       &none        &none       &none       &none       &none       &none
